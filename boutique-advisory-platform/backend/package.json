{
  "name": "boutique-advisory-backend",
  "version": "1.0.0",
  "description": "Backend API for Boutique Advisory Platform - connecting SMEs with investors",
  "main": "dist/index.js",
  "scripts": {
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "railway:start": "(npx prisma migrate deploy || npx prisma db push --skip-generate) && node dist/index.js",
    "dev": "nodemon src/index.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "npx ts-node prisma/seed.ts",
    "test": "node -r ts-node/register --test src/**/*.test.ts",
    "test:security": "npm test && npm run security:check",
    "security:check": "node scripts/security-check.js"
    ,
    "security:prod-secrets": "node scripts/validate-prod-secrets.js"
  },
  "prisma": {
    "seed": "npx ts-node prisma/seed.ts"
  },
  "keywords": [
    "advisory",
    "sme",
    "investor",
    "platform",
    "did",
    "cm",
    "rwa"
  ],
  "author": "Boutique Advisory Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@aws-sdk/client-s3": "^3.984.0",
    "@aws-sdk/s3-request-presigner": "^3.984.0",
    "@google-cloud/storage": "^7.19.0",
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^5.7.1",
    "@temporalio/client": "^1.8.7",
    "@temporalio/worker": "^1.8.7",
    "@types/crypto-js": "^4.2.2",
    "@types/qrcode": "^1.5.6",
    "@types/speakeasy": "^2.0.10",
    "@types/web-push": "^3.6.4",
    "axios": "^1.13.4",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "prisma": "5.7.1",
    "qrcode": "^1.5.4",
    "rate-limit-redis": "^4.3.1",
    "resend": "^6.9.1",
    "socket.io": "^4.8.3",
    "speakeasy": "^2.0.0",
    "web-push": "^3.6.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.5",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
