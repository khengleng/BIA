# Boutique Advisory Platform - Local Docker Configuration
# This configuration is used with docker-compose.yml

# Server Configuration
PORT=3003
NODE_ENV=development

# Database Configuration (matches docker-compose.yml)
DATABASE_URL="postgresql://bia_user:bia_secret_password@127.0.0.1:5432/bia_development?schema=public"

# JWT Configuration (use strong secrets in any shared environment)
JWT_SECRET=local-dev-jwt-secret-change-in-production-32chars
JWT_REFRESH_SECRET=local-dev-refresh-secret-change-in-production
JWT_EXPIRES_IN=24h
INITIAL_ADMIN_PASSWORD=BIA_Local_Admin_123!

# Session Configuration
SESSION_SECRET=local-dev-session-secret-change-in-production

# CORS Configuration (matches local frontend)
CORS_ORIGIN=http://localhost:3005
FRONTEND_URL=http://localhost:3005

# Multi-language Support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,km,zh

# Multi-tenant Configuration
DEFAULT_TENANT_ID=default
TENANT_ISOLATION_ENABLED=true

# Cloud Storage Configuration (S3/R2)
# For local development, you can use MinIO or leave empty to skip file uploads
S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com  # Or AWS S3 endpoint
S3_REGION=auto  # 'auto' for Cloudflare R2, or AWS region like 'us-east-1'
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET_NAME=bia-documents
S3_PUBLIC_URL=https://your-custom-domain.com  # Optional: Custom domain for public URLs

# Stripe Payment Configuration (Optional)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Email Configuration (Resend)
RESEND_API_KEY=re_Fjw5oy7R_2Wfn5niryJcnyDrbBnKKmkM2
EMAIL_FROM=contact@cambobia.com
