# ============================================
# BOUTIQUE ADVISORY PLATFORM - PRODUCTION ENV
# ============================================
# SECURITY NOTICE: Never commit this file with real values!
# Copy to .env and fill in production values

# Server Configuration
NODE_ENV=production
PORT=4000

# Database (Railway will inject this automatically)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# JWT Configuration
# SECURITY: Use a strong, unique secret (min 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=

# Initial Admin Password (REQUIRED for first deployment)
# SECURITY: Must be at least 12 characters with mixed case, numbers, and symbols
# This password is used to create initial admin users during migration
# CHANGE THIS IMMEDIATELY AFTER FIRST LOGIN
INITIAL_ADMIN_PASSWORD=

# Frontend URL (for CORS and password reset links)
FRONTEND_URL=https://your-frontend.railway.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# Email Service (for password reset emails)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# EMAIL_FROM=noreply@boutique-advisory.com

# AWS S3 (for document storage in production)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# AWS_S3_BUCKET=

# External Services (optional)
# DID_API_GATEWAY_URL=
# CM_PORTAL_URL=
# RWA_API_URL=

# Redis (optional, for session storage and rate limiting)
# REDIS_URL=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security Headers
HELMET_ENABLED=true
CORS_ENABLED=true

# Audit Logging
AUDIT_LOG_ENABLED=true
# AUDIT_LOG_ENDPOINT= (for external SIEM integration)
